{
    "name": "sxo",
    "version": "0.9.1",
    "description": "SXO — Minimal server-side JSX framework and CLI. Directory-based routing, hot reload, dual esbuild build outputs (client/server) and a Rust/WASM JSX transformer.",
    "keywords": [
        "sxo",
        "server-side-jsx",
        "ssx",
        "esbuild",
        "jsx",
        "wasm",
        "hot-replace",
        "cli",
        "static-site",
        "ssr"
    ],
    "author": "Víctor García",
    "license": "MIT",
    "type": "module",
    "exports": {
        ".": "./bin/sxo.js",
        "./runtime": "./src/js/runtime/handler.js",
        "./cloudflare": "./src/js/server/prod/cloudflare.js",
        "./dev-node": "./src/js/server/dev/node.js",
        "./dev-bun": "./src/js/server/dev/bun.js",
        "./dev-deno": "./src/js/server/dev/deno.js"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/gc-victor/sxo.git"
    },
    "homepage": "https://github.com/gc-victor/sxo#readme",
    "bugs": {
        "url": "https://github.com/gc-victor/sxo/issues"
    },
    "bin": {
        "sxo": "bin/sxo.js"
    },
    "engines": {
        "node": ">=20"
    },
    "scripts": {
        "help": "./bin/sxo.js --help",
        "wasm-build": "node scripts/wasm-build.js",
        "format": "biome format src/js --write",
        "check": "biome check src/js components/e2e components/src",
        "check:fix": "biome check --write --unsafe src/js components/e2e components/src",
        "components:dev": "pnpm run --filter ./components dev",
        "components:build": "pnpm run --filter ./components sxo:build",
        "components:start": "pnpm run --filter ./components sxo:start",
        "components:clean": "pnpm run --filter ./components sxo:clean",
        "components:install": "pnpm run --filter ./components install --frozen-lockfile",
        "components:playwright:install": "pnpm run --filter ./components playwright:install",
        "test": "NODE_ENV=test node --test src/js/**/*.test.js",
        "test:e2e": "pnpm run --filter ./components test:e2e"
    },
    "devDependencies": {
        "@biomejs/biome": "^2.3.4",
        "@types/node": "^24.10.0"
    },
    "dependencies": {
        "@qery/reactive-component": "^0.8.0",
        "cac": "^6.7.14",
        "dotenv": "^17.2.3",
        "esbuild": "^0.27.0",
        "pino": "^10.1.0",
        "pino-http": "^11.0.0",
        "pino-pretty": "^13.1.2"
    }
}
