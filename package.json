{
    "name": "sxo",
    "version": "0.2.0",
    "description": "SXO — Minimal server-side JSX framework and CLI. Directory-based routing, hot reload, dual esbuild build outputs (client/server) and a Rust/WASM JSX precompiler.",
    "keywords": [
        "sxo",
        "server-side-jsx",
        "ssx",
        "esbuild",
        "jsx",
        "wasm",
        "hot-replace",
        "cli",
        "static-site",
        "ssr"
    ],
    "author": "Víctor García",
    "license": "MIT",
    "type": "module",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/gc-victor/sxo.git"
    },
    "homepage": "https://github.com/gc-victor/sxo#readme",
    "bugs": {
        "url": "https://github.com/gc-victor/sxo/issues"
    },
    "main": "bin/sxo.js",
    "bin": {
        "sxo": "bin/sxo.js"
    },
    "engines": {
        "node": ">=20"
    },
    "scripts": {
        "help": "./bin/sxo.js --help",
        "dev": "./bin/sxo.js dev",
        "build": "./bin/sxo.js build",
        "start": "./bin/sxo.js start",
        "clean": "./bin/sxo.js clean",
        "wasm-build": "node scripts/wasm-build.js",
        "format": "biome format src/js --write",
        "check": "biome check src/js",
        "check:fix": "biome check --write --unsafe src/js",
        "test": "node --test $(find src/js -type f -name '*.test.js')"
    },
    "devDependencies": {
        "@biomejs/biome": "^2.1.4",
        "@qery/reactive-component": "^0.3.0",
        "@types/node": "^24.3.0"
    },
    "dependencies": {
        "@craftamap/esbuild-plugin-html": "^0.9.0",
        "cac": "^6.7.14",
        "dotenv": "^17.2.1",
        "esbuild": "^0.25.8",
        "pino": "^9.8.0",
        "pino-http": "^10.5.0",
        "pino-pretty": "^13.1.1"
    }
}
